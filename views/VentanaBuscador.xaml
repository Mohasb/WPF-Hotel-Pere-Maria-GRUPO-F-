<Window x:Class="HotelPereMaria.VentanaBuscador"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HotelPereMaria"
        mc:Ignorable="d"
        Title="VentanaBuscador" Height="818" Width="1340" WindowState="Maximized">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Image Source="../Images/logoAzul.png" Width="60" Height="50" Margin="40,28,10,28"/>
                    <Label FontSize="26" Margin="0,28,10,28">Hotel Pere Maria</Label>
                    <Border BorderBrush="#103260" BorderThickness="1,0,0,0" Height="54"></Border>
                    <StackPanel>
                        <Button FontSize="21" Foreground="#B5B5B5" Margin="0,30,0,0" Background="Transparent" Click="Button_Click" BorderBrush="Transparent" HorizontalAlignment="Center" VerticalAlignment="Center">Cerrar sesión</Button>
                    </StackPanel>

                    <Button x:Name="btnListUsers" Background="Transparent" BorderBrush="Transparent" Width="170" Height="48" Margin="300,0,0,0" Click="btnListUsers_Click">
                        <Border Background="#103260" Height="44" Width="164" CornerRadius="15">
                            <Label HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="#F3F6FA">Lista de usuarios</Label>
                        </Border>
                    </Button>
                    <Button x:Name="btnAddReserva" Background="Transparent" BorderBrush="Transparent" Width="170" Height="48">
                        <Border Background="#103260" Height="44" Width="164" CornerRadius="15">
                            <Label HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="#F3F6FA">Añadir habitación</Label>
                        </Border>
                    </Button>
                    <Button x:Name="btnEditRoom" Background="Transparent" BorderBrush="Transparent" Width="170" Height="48" Margin="0,0,0,0">
                        <Border Background="#103260" Height="44" Width="164" CornerRadius="15">
                            <Label HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="#F3F6FA">Editar/Eliminar habitación</Label>
                        </Border>
                    </Button>
                </StackPanel>
                <Label Foreground="#103260" FontSize="52" Margin="45,0,0,0" >Buscador:</Label>
                <Border Width="1352" Height="223" CornerRadius="20" Background="#FFF7F5F5">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel>
                            <Label Margin="20,10,0,0" FontSize="14">Número de Huéspedes</Label>
                            <TextBox Margin="20,0,0,0" Width="346" Height="48">
                            </TextBox>
                            <Label Margin="20,20,0,0" FontSize="14">Extras</Label>
                            <StackPanel Orientation="Horizontal" Margin="25,5,0,0">
                                <CheckBox>Spa</CheckBox>
                                <CheckBox>Parking</CheckBox>
                                <CheckBox>Gym</CheckBox>
                                <CheckBox>Completo</CheckBox>
                                <CheckBox>Wifi</CheckBox>
                            </StackPanel>
                        </StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <StackPanel Grid.Row="0" Grid.Column="0">
                                <Label Margin="20,10,0,0" FontSize="14">Fecha de entrada</Label>
                                <DatePicker Margin="20,0,0,0" Width="192" Height="48"></DatePicker>
                            </StackPanel>
                            <StackPanel Grid.Column="1" Grid.Row="0">
                                <Label Margin="20,10,0,0" FontSize="14">Fecha de salida</Label>
                                <DatePicker Margin="20,0,0,0" Width="192" Height="48"></DatePicker>
                            </StackPanel>
                            <StackPanel Grid.Row="1" Grid.ColumnSpan="2">
                                <Label Margin="20,10,0,0" FontSize="14">Precio noche</Label>
                                <Slider></Slider>
                            </StackPanel>
                        </Grid>
                        <StackPanel>
                            <Label Margin="20,10,0,0" FontSize="14">Tipo de habitación</Label>
                            <TextBox Margin="20,0,0,0" Width="346" Height="48"></TextBox>
                            <StackPanel Orientation="Horizontal">

                                <Button Background="Transparent" BorderBrush="Transparent" Margin="190,70,0,0" Click="Button_Click_1">
                                    <Border Background="#103260" Height="44" Width="164" CornerRadius="15">
                                        <Label HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="#F3F6FA">Buscar</Label>
                                    </Border>
                                </Button>
                            </StackPanel>
                        </StackPanel>

                    </StackPanel>

                </Border>
                <Label FontSize="52" Margin="45,0,0,0">Habitaciones :</Label>
                <StackPanel Orientation="Horizontal" Margin="20">
                    <StackPanel>
                        <Image Source="{Binding Rooms[0].images[0].url}" Width="266" Height="335" Margin="109,10,0,0"/>
                        <TextBlock Text="{Binding Rooms[0].type}" Margin="109,10,0,0" FontSize="27" HorizontalAlignment="Center" ></TextBlock>
                        <TextBlock Text="{Binding Rooms[0].price_per_night}" Margin="109,0,0,0" FontSize="18" HorizontalAlignment="Center" Foreground="#103260"></TextBlock>
                        <Button x:Name="btnReservar1" Command="{Binding DataContext.ReserveRoomCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding Rooms[0]}" Background="Transparent" BorderBrush="Transparent"  Margin="109,10,0,0" Width="170" Height="48" Click="btnReservar1_Click">
                            <Border Background="#103260" Height="44" Width="164" CornerRadius="15">
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="#F3F6FA">Reservar habitación</Label>
                            </Border>
                        </Button>
                    </StackPanel>
                    <StackPanel>
                        <Image Source="{Binding Rooms[1].images[0].url}" Width="266" Height="335" Margin="40,10,0,0"/>
                        <TextBlock Text="{Binding Rooms[1].type}" Margin="30,10,0,0" FontSize="27" HorizontalAlignment="Center"></TextBlock>
                        <TextBlock Text="{Binding Rooms[1].price_per_night}" Margin="30,0,0,0" FontSize="18" HorizontalAlignment="Center" Foreground="#103260"></TextBlock>
                        <Button x:Name="btnReservar2" Command="{Binding DataContext.ReserveRoomCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding Rooms[0]}" Background="Transparent" BorderBrush="Transparent"  Margin="40,10,0,0" Width="170" Height="48" Click="btnReservar2_Click">
                            <Border Background="#103260" Height="44" Width="164" CornerRadius="15">
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="#F3F6FA">Reservar habitación</Label>
                            </Border>
                        </Button>
                    </StackPanel>
                    <StackPanel>
                        <Image Source="{Binding Rooms[2].images[0].url}" Width="266" Height="335" Margin="40,10,0,0"/>
                        <TextBlock Text="{Binding Rooms[2].type}" Margin="30,10,0,0" FontSize="27" HorizontalAlignment="Center"></TextBlock>
                        <TextBlock Text="{Binding Rooms[2].price_per_night}" Margin="30,0,0,0" FontSize="18" HorizontalAlignment="Center" Foreground="#103260"></TextBlock>
                        <Button x:Name="btnReservar3" Command="{Binding DataContext.ReserveRoomCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding Rooms[0]}" Background="Transparent" BorderBrush="Transparent"  Margin="40,10,0,0" Width="170" Height="48" Click="btnReservar3_Click">
                            <Border Background="#103260" Height="44" Width="164" CornerRadius="15">
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="#F3F6FA">Reservar habitación</Label>
                            </Border>
                        </Button>
                    </StackPanel>
                    <StackPanel>
                        <Image Source="{Binding Rooms[3].images[0].url}" Width="266" Height="335" Margin="40,10,0,0"/>
                        <TextBlock Text="{Binding Rooms[3].type}" Margin="30,10,0,0" FontSize="27" HorizontalAlignment="Center"></TextBlock>
                        <TextBlock Text="{Binding Rooms[3].price_per_night}" Margin="30,0,0,0" FontSize="18" HorizontalAlignment="Center" Foreground="#103260"></TextBlock>
                        <Button x:Name="btnReservar4" Command="{Binding DataContext.ReserveRoomCommand, RelativeSource={RelativeSource AncestorType=Window}}" CommandParameter="{Binding Rooms[0]}" Background="Transparent" BorderBrush="Transparent"  Margin="40,10,0,0" Width="170" Height="48" Click="btnReservar4_Click">
                            <Border Background="#103260" Height="44" Width="164" CornerRadius="15">
                                <Label HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" Foreground="#F3F6FA">Reservar habitación</Label>
                            </Border>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
